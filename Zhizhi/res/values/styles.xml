<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_normal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize.normal</item>
    </style>

    <style name="text_curr_week_ceil" parent="text_normal">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ceil_bg</item>
    </style>

    <style name="text_curr_week" parent="text_curr_week_ceil">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="text_title" parent="text_normal">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textsize.title</item>
        <item name="android:layout_margin">@dimen/gap.small</item>
    </style>

    <style name="text_content" parent="text_title">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/textsize.normal</item>
        <item name="android:singleLine">false</item>
    </style>

</resources>