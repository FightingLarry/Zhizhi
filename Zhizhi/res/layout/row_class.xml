<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/gap.litle"
    android:paddingLeft="@dimen/gap.normal"
    android:paddingRight="@dimen/gap.small"
    android:paddingTop="@dimen/gap.small" >

    <LinearLayout
        android:id="@id/root_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/gap.large" >

            <TextView
                android:id="@id/item_icon"
                style="@style/red_circle" />

            <TextView
                android:id="@id/item_title"
                style="@style/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/gap.litle"
            android:paddingLeft="@dimen/gap.litle"
            android:paddingRight="@dimen/gap.litle" >

            <TextView
                style="@style/text_class_curr_ceil_head"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/monday" />

            <TextView
                style="@style/text_class_curr_ceil_head"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tuesday" />

            <TextView
                style="@style/text_class_curr_ceil_head"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/wednesday" />

            <TextView
                style="@style/text_class_curr_ceil_head"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/thursday" />

            <TextView
                style="@style/text_class_curr_ceil_head"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/friday" />
        </LinearLayout>

        <include
            android:id="@id/morning1"
            layout="@layout/row_class_curriculun" />

        <include
            android:id="@id/morning2"
            layout="@layout/row_class_curriculun" />

        <include
            android:id="@id/afternoon1"
            layout="@layout/row_class_curriculun" />

        <include
            android:id="@id/afternoon2"
            layout="@layout/row_class_curriculun" />

        <include
            android:id="@id/night"
            layout="@layout/row_class_curriculun" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap.small"
                android:background="@drawable/button_bg"
                android:padding="@dimen/gap.small"
                android:src="@drawable/add" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap.small"
                android:background="@drawable/button_bg"
                android:padding="@dimen/gap.small"
                android:src="@drawable/add" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>